{{>navbar}}

<div>
  <div>
    <form class="form-horizontal" action="/sign_up" method="POST">
      <center>
        <h1>Sign Up</h1>
      </center>
      <h1></h1>

      <!--First Name-->
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-4 input-group">
          <span class='input-group-addon'><i class='glyphicon glyphicon-user'></i></span>
          <input type="text" class="form-control" name="firstName" placeholder="First name" value='{{firstName}}' required>
        </div>
      </div>

      <!--Last Name-->
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-4 input-group">
          <span class='input-group-addon'><i class='glyphicon glyphicon-user'></i></span>
          <input type="text" class="form-control" name="lastName" placeholder="Last name" value='{{lastName}}' required>
        </div>
      </div>

      <!--Email-->
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-4 input-group">
          <span class='input-group-addon'><i class='glyphicon glyphicon-envelope'></i></span>
          <input type="email" class="form-control" name="email" placeholder="example@example.com" required>
        </div>
      </div>

      <!--Password-->
      <div class="form-group">
        <div class="col-xs-offset-4 col-xs-4 input-group">
          <span class='input-group-addon'><i class='glyphicon glyphicon-lock'></i></span>
          <input type="password" class="form-control" name="password" placeholder="Password" required>
        </div>
      </div>

      <!--button-->
      <div class="form-group">
        <div>
          <button type="submit" style="width:33.4%;" class="btn btn-danger col-xs-offset-4">Submit</button>
        </div>
      </div>

    </form>
  </div>
</div>

{{#if error}}
  <br><br>
  <center>
    <h1 style='color: red;'>{{error}}</h1>
  </center>
{{/if}}